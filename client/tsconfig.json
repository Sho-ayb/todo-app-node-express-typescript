{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2018",
    "noImplicitAny": true,
    "noEmit": true,
    "checkJs": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "baseUrl": "..",
    "paths": {
      "@shared/*": ["shared/*"]
    }
  },
  "include": ["src/**/*", "../../shared/**/*"],
  "exclude": [
    "node_modules",
    "build" // Exclude the output directory during the build process
  ]
}
