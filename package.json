{
  "name": "express-typescript-max",
  "version": "1.0.0",
  "description": "This is part of Understanding Typescript with Maximillian Schwartzmuller.",
  "main": "build/server/index.js",
  "scripts": {
    "start:nodemon": "nodemon build/server/index.js",
    "watch:client": "webpack serve --config client/webpack.dev.mjs --open-app-name chrome",
    "watch:server": "webpack --config server/webpack.server.mjs --mode development --watch",
    "build:client": "webpack --config client/webpack.prod.mjs",
    "build:server": "webpack --config server/webpack.server.mjs --mode production",
    "build:both": "npm run build:client && npm run build:server",
    "watch": "npm-run-all --parallel watch:client watch:server"
  },
  "author": "Sho'ayb Choudhry",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.19.2"
